# EditorConfig: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,html,css,json,md,markdown,adoc,asciidoc,yml,yaml,xml,gitignore,gitattributes}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
